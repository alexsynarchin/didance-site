<form action="" method="post" class="didance-form special-block__form">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Как вас зовут" name="name" value="[[+fi.name]]" >
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Ваш телефон" name="phone" value="[[+fi.phone]]">
    </div>
    <div class="form-group">
        <input type="email" class="form-control" placeholder="Ваш Email" name="e-mail" value="[[+fi.e-mail]]">
    </div>
    <div class="special-block__btn-wrap text-center"><button type="submit" class="btn btn-didance">Отправить</button></div>
</form>